@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model HTQLTV.Models.BorrowReturn

@{
    ViewData["Title"] = "DeleteBorrow";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Xóa thông tin mượn trả sách</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h3>Bạn có chắc chắn muốn xóa thông tin trả sách không?</h3>
<div>
    <h4>Thông tin mượn trả sách</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BookNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BorrowDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BorrowDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DueDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DueDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReturnDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReturnDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Author)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Book.Author)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Reader.ReaderId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Reader.ReaderId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Staff.StaffId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Staff.StaffId)
        </dd>
    </dl>
    
    <form asp-action="DeleteBorrowConfirmed" asp-route-id="@Model.BorrowReturnId" method="post">
        <input type="hidden" asp-for="BorrowReturnId" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="ListBorrow" class="btn btn-secondary">Quay lại</a>
    </form>
</div>
