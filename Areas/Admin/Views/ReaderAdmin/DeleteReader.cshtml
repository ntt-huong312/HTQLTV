@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model HTQLTV.Models.Reader

@{
    ViewData["Title"] = "DeleteReader";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Xóa thông tin độc giả</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Thông tin độc giả</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReaderAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReaderAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
    </dl>
  
    <form asp-action="DeleteReaderConfirmed" asp-route-maDocGia="@Model.ReaderId" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="ListReader">Quay lại</a>
    </form>
</div>
