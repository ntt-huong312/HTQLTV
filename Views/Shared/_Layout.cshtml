<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library QNU</title>
    <link rel="stylesheet" href="~/css/LayoutUser/layout.css"/>
    <link rel="stylesheet" href="~/css/LayoutUser/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HTQLTV.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">QNU Library</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor02">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Home" asp-action="Index">
                                Trang chủ
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>
                       
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Thể loại</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-controller="Home" asp-action="TheLoai" asp-route-maloai="1">Công nghệ thông tin</a>
                                    <a class="dropdown-item" asp-controller="Home" asp-action="TheLoai" asp-route-maloai="2">Ngoại ngữ</a>
                                    <a class="dropdown-item" asp-controller="Home" asp-action="TheLoai" asp-route-maloai="3">Truyện</a>                       
                                    <a class="dropdown-item" asp-controller="Home" asp-action="TheLoai" asp-route-maloai="4">Văn học</a>
                                    <a class="dropdown-item" asp-action="Index">Tất cả</a>
                                </div
                        </li>
                         <li class="nav-item">
                            <a class="nav-link" href="../Access/Login">Đăng nhập</a>
                        </li>
                    </ul>


                    <form asp-controller="Home" asp-action="Index" method="get" class="d-flex">
                        <select class="form-select me-sm-2" name="searchType">
                            <option value="title">Tên sách</option>
                            <option value="author">Tên tác giả</option>
                            <option value="category">Thể loại</option>
                        </select>
                        <input class="form-control me-sm-2" type="search" name="searchQuery" value="@ViewBag.CurrentFilter" placeholder="Search for...">
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Tìm</button>
                    </form>
                </div>
        </nav>
    </header>
    <div class="container">
        <div class="row">
            <div class="col-lg-12"> 
            </div>
            @RenderBody()
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - HTQLTV - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>